{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        // TODO Refactor so that the options below are no longer needed
        "allowUnusedLabels": true,
        "noImplicitAny": false,
        "noUnusedLocals": false
    }
}
