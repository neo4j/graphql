{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "paths": {
            "@neo4j/graphql": ["packages/graphql/src"]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        // TODO Refactor so that noImplicitAny is no longer needed
        "noImplicitAny": false
    }
}
