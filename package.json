{
    "name": "neo4j-graphql",
    "author": "Neo4j Inc.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/neo4j/graphql.git"
    },
    "private": true,
    "workspaces": [
        "packages/*",
        "examples/neo-push/*"
    ],
    "scripts": {
        "build": "lerna run build --stream",
        "prettify": "prettier --write \"packages/**/*.ts\"",
        "lint": "eslint .",
        "lerna:test": "lerna run test --concurrency 1 --stream",
        "test": "yarn build && run-s --continue-on-error lerna:test",
        "test:pr": "run-s lint test",
        "prepare": "run-s lerna clean -y lerna bootstrap -y",
        "generate:docs": "lerna run generate:doc",
        "watch": "lerna run watch --stream --parallel",
        "neo-push": "yarn build && cd examples/neo-push && concurrently \"cd server && yarn run dev\" \"cd client && yarn run dev\"",
        "neo-push-seed": "yarn build && cd examples/neo-push/server && yarn run seed"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "4.1.1",
        "@typescript-eslint/parser": "4.15.1",
        "concurrently": "6.0.0",
        "eslint": "7.9.0",
        "eslint-config-airbnb-typescript": "10.0.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-eslint-comments": "3.2.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jest": "24.0.1",
        "eslint-plugin-prettier": "3.1.4",
        "husky": "4.2.5",
        "jest": "26.6.3",
        "lerna": "^3.22.1",
        "lint-staged": "10.2.11",
        "npm-run-all": "4.1.5",
        "prettier": "2.1.2",
        "typescript": "3.9.7"
    }
}
